{
  "name": "mf.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messenger project",
  "main": "index.js",
  "scripts": {
    "start": "npm install && npm run build && node server.js",
    "startwin": "npm install && npm run buildwin && node server.js",
    "test": "mocha-webpack --require jsdom-global/register --webpack-config webpack.test.config.js \"src/**/*.test.ts\"",
    "testold": "env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha --require ts-node/register --require jsdom-global/register 'src/**/*.test.ts'",
    "eslint": "eslint .",
    "copyindex": "cp src/index.html dist",
    "copyindexwin": "copy src\\index.html dist",
    "build": "webpack && npm run copyindex",
    "buildwin": "webpack && npm run copyindexwin",
    "gitpush": "git push -u origin master && git checkout deploy && git merge master && git push -u origin deploy && git checkout master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IrinaT1/mf.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IrinaT1/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/IrinaT1/mf.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "14.0.11",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.10.0",
    "jsdom": "^16.4.0",
    "jsdom-global": "3.0.2",
    "mocha": "^7.2.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^15.1.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "express": "4.17.1",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
