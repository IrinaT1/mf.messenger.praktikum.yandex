{
  "name": "mf.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Messenger project",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "npm install && npm run build && node server.js",
    "startwin": "npm install && npm run buildwin && node server.js",
    "test": "env TS_NODE_PROJECT=\"tsconfig.testing.json\" mocha --require ts-node/register --require jsdom-global/register 'src/**/*.test.ts'",
    "copyindex": "cp src/index.html dist",
    "copyindexwin": "copy src\\index.html dist",
    "build": "tsc && npm run scss && npm run fixext && npm run copyindex",
    "buildwin": "tsc && npm run scss && npm run fixext && npm run copyindexwin",
    "scss": "node-sass src/style -o dist/style",
    "fixext": "node add-js-ext.js dist",
    "gitpush": "git push -u origin master && git checkout deploy && git merge master && git push -u origin deploy && git checkout master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IrinaT1/mf.messenger.praktikum.yandex.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IrinaT1/mf.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/IrinaT1/mf.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "14.0.11",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "jsdom": "16.4.0",
    "jsdom-global": "3.0.2",
    "mocha": "^7.2.0",
    "nock": "^13.0.4",
    "node-sass": "^4.14.1",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "express": "4.17.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
